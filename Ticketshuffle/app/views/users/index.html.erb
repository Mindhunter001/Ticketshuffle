<h1> Supporter Liste </h1>

<table class="table">
  <tr>
    <th>Name</th>
    <th>Vorname</th>
    <th>Tickets</th>
    <th>Games</th>
    <th colspan="2"></th>
  </tr>


  <% @users.each do |user| %>
    <tr>
      <td><%= user.lastname %></td>
      <td><%= user.firstname %></td>
      <td><%= user.tickets %></td>
      <td><%= user.games %></td>
      <td><%= link_to 'Show', user_path(user) %> |</td>
      <td><%= link_to 'Edit', edit_user_path(user) %></td>
    </tr>

  <% end %>

</table>
<br><br>
